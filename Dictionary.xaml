<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="bg-primary" Color="#FFE4E4E4"/>


    <Style x:Key="main_panel" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="10"/>
    </Style>



    <Style TargetType="Page">
        <Setter Property="Height" Value="700"/>
        <Setter Property="Width" Value="1200"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
        <Setter Property="BorderThickness" Value="0, 0, 0, 1"/>
        <Setter Property="BorderBrush" Value="#FFE2E2E2"/>
        <Setter Property="MaxLines" Value="1"/>
        <Setter Property="MaxLength" Value="200"/>

    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>
    <Style TargetType="Button">

        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="3"/>
            </Style>
        </Style.Resources>

        <Style.Setters>

            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Background" Value="#FFE4E4E4"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
            <Setter Property="FontWeight" Value="Regular"/>
        </Style.Setters>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>


    <Style TargetType="ListView">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

    <Style TargetType="Paragraph">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/#Inter"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>

</ResourceDictionary>